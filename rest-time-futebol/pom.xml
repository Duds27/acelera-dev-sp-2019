    <version>0.0.1-SNAPSHOT</version>

    <name>rest-time-estoque</name>
    <url>https://github.com/caiopavanelli/acelera-dev-sp-2019/tree/master/rest-time-futebol</url>

    <contributors>
        <contributor>
            <email>caiopava@gmail.com</email>
        </contributor>
    </contributors>

    <properties>
